<h1>TEST</h1>

<ul>
  <li><code>article.title:</code> <b>{{ article.title }}</b></li>
  <li><code>article.author:</code> <b>{{ article.author }}</b></li>
  <li><code>article.published_at:</code> <b>{{ article.published_at }}</b></li>
  <li>{{ 'now' | date: '%B %d, %Y' }}</li>
</ul>

<article class="article flex flex-col pl-20 pr-20 pt-20" itemscope itemtype="http://schema.org/BlogPosting">
  {% for block in section.blocks %}
    {% case block.type %}
    {% when 'article_title' %}
      <div class="article flex flex-col items-center justify-center">
        <a href="{{ blog.url }}" class="article-link text-[#FF5599]">
          {{ blog.title }}
        </a>
          <h1 class="article-title flex flex-col text-center text-5xl m-20 text-[#FF5599]" itemprop="headline"> 
            {{ article.title }}
          </h1>
      </div>
        
    {% when 'article_author' %}
      {% if section.settings.enable_author %}
        <small class="text-[#FF5599]" itemprop="author">{{ article.author }}</small>
      {% endif %}
    {% when 'article_publish_date' %}
      {% if section.settings.enable_publish_date %}
        <time class="text-[#FF5599]" itemprop="datePublished dateCreated" datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: format: 'on_date' }}</time>
      {% endif %}
    {% when 'article_image' %}
      <div class="max-w-7xl bg-blue-400 rounded-lg mt-20 mb-20 mx-2 md:mx-auto overflow-hidden">
        {% if article.image != blank %}
          <img class="article__image transition-transform duration-300 ease-in-out hover:scale-110 cursor-pointer" itemprop="image" src="{{ article.image | img_url: 'master' }}" alt="{{ article.image.alt }}">
        {% else %}
          {% assign placeholder_image = 'lifestyle-2' %}
          {{ placeholder_image | placeholder_svg_tag: 'w-full h-80 md:h-96 object-cover object-center p-5' }}
        {% endif %}
      </div>
    {% when 'article_content' %}
      {% if section.settings.enable_content %}
        <div class="flex flex-col text-center gap-4" itemprop="articleBody"> {{ article.content }}</div>
      {% endif %}
      
    {% endcase %}

  {% endfor %}

</article>

{% if blog.comments_enabled? %}
  <div id="comments" class="flex my-8">
    {% if article.comments_count > 0 %}
      <div class="flex-1 items-center justify-center mx-auto max-w-4x1 px-4">
        <h1 class="flex justify-center text-lg mb-4 font-medium">See what people are saying</h1>

        {% paginate article.comments by 5 %}
          {% for comment in article.comments %}
            <div class="flex-1 border my-4 px-4 py-2 sm:px-6 sm:py-4 loading-relaxed">
              <span class="comment-author">{{ comment.author }}</span>
              <span class="text-xs text-[#FF5599]">{{ comment.created_at | date: format: 'default'}}
              </span>
              <p class="text-sm">{{ comment.content }}</p>
            </div>
          {% endfor %}

          {% if paginate.pages > 1 %}
            {{ paginate | default_pagination }}
          {% endif %}
        {% endpaginate %}
      </div>
    {% else %}
      There are no comments in this article
    {% endif %}
  </div>

  <div id="comment_form" class="mb-8">
    {% form 'new_comment', article %}
      <div class="flex-1 mx-auto justify-center items-center max-w-4xl px-4">

        {% if form.errors %}

          <div class="border p-5">
            <div class="flex flex-row items-center w-full my-3">
              <div class="text-red-500">
                {% render 'icon-failed' %}
              </div>
              <div class="text-sm font-medium ml-3">
                Oh no! Your comment is not posted
              </div>
            </div>
            <ul class="px-4 mb-3 ml-7 list-decimal">
              {% for error in form.errors %}
                <li>
                  <span>{{ form.errors.message[error] }}</span>
                </li>
              {% endfor %}
            </ul>

          </div>
        {% elsif form.posted_successfully? %}
          <div class="flex flex-row items-center w-full my-3 p-5">
            <div class="text-green-500">
              {% render 'icon-success' %}
            </div>
            <div class="text-sm font-medium ml-3">Comment is posted successfully</div>
          </div>
        {% endif %}
        <div class="px-1 md:flex mb-3">
          <div class="px-3 md:w-1/2">
            <label for="comment_author" class="text-[#FF5599] font-medium uppercase text-xs mb-2">
              Name
            </label>
            <input 
              type="text" 
              name="comment[author]" 
              id="comment_author" 
              class="w-full text-gray-700 border py-3 px-4 focus:outline-none"
              placeholder="Jane Doe"
              required
            >
          </div>
          <div class="px-3 md:w-1/2">
            <label for="comment_email" class="text-[#FF5599] font-medium uppercase text-xs mb-2">
              Email
            </label>
            <input 
              type="text" 
              name="comment[email]" 
              id="comment_email" 
              class="w-full text-gray-700 border py-3 px-4 focus:outline-none"
              placeholder="janedoe@gmail.com"
              required
            >
          </div>
        </div>
        <div class="px-1 md:flex mb-3">
          <div class="md:w-full px-3">
            <label for="" class="text-[#FF5599] font-medium uppercase text-xs mb-2">
              Comment
            </label>
            <textarea 
              class="w-full resize-none h-20 p-2 focus:outline-none border" 
              name="comment[body]" 
              id="comment_content" 
              required>
            </textarea>
          </div>
        </div>
        <div class="px-1 md:flex mb-3">
          <div class="md:w-full px-3">
            <input 
              type="submit" 
              class="w-full cursor-pointer px-4 py-2 border text-base font-medium text-white bg-[#FF5599] hover:bg-purple-700" 
              value="Post comment"
            >
          </div>
        </div>
      </div>
    {% endform %}

  </div>
{% endif %}

<script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "BlogPosting",
    "headline": {{ article.title | json }},
    "articleBody": {{ article.content | strip_html | json }},
    {% if article.excerpt != blank %}
      "description": {{ article.excerpt | strip_html | json }},
    {% endif %}
    {% if article.image %}
      "image": [
        {{ article.image | img_url: "medium" | prepend: 'https:' | json }}
      ],
    {% endif %}
    "datePublished": {{ article.published_at | date: format: "default" | json }},
    "dateCreated": {{ article.created_at | date: format: "default" | json }},
    "author": {
      "@type": "Person",
      "name": {{ article.author | json }}
    },
    "publisher": {
      "@type": "Organization",
      "name": {{  shop.name | json }}
  }
</script>

