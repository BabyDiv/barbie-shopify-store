<footer>
  <nav>
    <ul class="js-nav-list hidden flex-col md:flex flex-row justify-between gap-5 items-center md:items-start w-full p-8 lg:gap-20">
      {% for item in linklists["footer"].links %}
        <li class="js-item-footer {% if item.links != blank %}has-dropdown{% endif %}">
          <a href ="{{ item.url }}" class="text-[#ff5599] nav-link">{{ item.title }}</a>
          {% if item.links != blank %}
            <ul class="js-item-ul visibility-hidden absolute top-[50px] left-1/2 -translate-x-1/2 bg-white p-5 shadow-md rounded z-10">
              {% for subitem in item.links %}
              <li>
                <a href="{{ subitem.url }}" class="text-[#ff5599] nav-link">{{ subitem.title }}</a>
              </li>
            {% endfor %}
            </ul>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </nav>
</footer>
{% schema %}
{
  "name": "t:general.footer",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "t:labels.show_payment_icons",
      "default": true
    }
  ]
}
{% endschema %}
