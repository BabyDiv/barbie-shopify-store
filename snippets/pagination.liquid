{% if pagination.pages > 0 %}
  <nav role="navigation" class="flex justify-center my-8">
    {% if pagination.previous %}
      <a href="{{ pagination.previous.url }}" class="border border-[#FF5599] px-4 py-2 text-[#FF5599] hover:bg-purple-700 hover:text-white hover:border-purple-700">{{ pagination.previous.title }}</a>
    {% endif %}

    {% if pagination.next %}
      <a href="{{ pagination.next.url }}" class="border border-[#FF5599] px-4 py-2 text-[#FF5599] hover:bg-purple-700 hover:text-white hover:border-purple-700">{{ pagination.next.title }}</a>
    {% endif %}
  </nav>
{% endif %}